{
  "name": "hmi",
  "version": "0.1.0",
  "description": "Industrial HMI based on SEMI E95 specification",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:wsl": "DISPLAY=:0 MESA_D3D12_DEFAULT_ADAPTER_NAME=NVIDIA tauri dev",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:node": "node --test --loader ./tests-node/loader.mjs tests-node/*.test.mjs",
    "test:node:coverage": "NODE_V8_COVERAGE=coverage node --test --experimental-test-coverage --loader ./tests-node/loader.mjs tests-node/*.test.mjs",
    "tauri": "tauri"
  },
  "dependencies": {
    "@tauri-apps/plugin-fs": "^2.4.4",
    "i18next": "^24.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.1.3",
    "react-icons": "^5.0.0",
    "uplot": "^1.6.31",
    "uplot-react": "^1.2.2",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/coverage-v8": "^1.0.0 || ^2.0.0",
    "@vitest/ui": "^1.0.0 || ^2.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^24.0.0",
    "typescript": "~5.6.0",
    "vite": "^6.0.3",
    "vitest": "^1.0.0 || ^2.0.0"
  }
}
