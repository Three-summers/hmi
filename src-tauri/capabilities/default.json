{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the HMI application",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-close",
    "core:window:allow-set-fullscreen",
    "shell:allow-open",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "path:default"
  ]
}
